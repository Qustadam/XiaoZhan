<resources>

    <style name="AppBaseTheme" parent="@style/AppActionBarTheme"></style>

    <style name="AppTheme" parent="@style/AppBaseTheme"></style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <style name="AppActionBarTheme" parent="@style/Theme.AppCompat.Light.DarkActionBar">
        <item name="android:actionBarStyle">@style/AppActionBarStyle</item>
        <item name="windowActionBarOverlay">true</item>
        <item name="actionButtonStyle">@style/AppActionButtonStyle</item>
        <item name="actionBarItemBackground">@drawable/actionbar_item_background</item>
        <item name="popupMenuStyle">@style/AppPopupMenuStyle</item>
        <item name="listPopupWindowStyle">@style/AppListPopupWindowStyle</item>
        <item name="dropDownListViewStyle">@style/AppDropDownListViewStyle</item>
    </style>

    <style name="AppActionBarStyle" parent="@style/Widget.AppCompat.Light.ActionBar.Solid.Inverse">
        <item name="android:background">@drawable/actionbar_background</item>
    </style>

    <style name="AppActionButtonStyle" parent="@style/Widget.AppCompat.Base.ActionButton">
        <item name="background">@drawable/actionbar_item_background</item>
    </style>

    <style name="AppPopupMenuStyle" parent="@style/Widget.AppCompat.Light.PopupMenu">
        <item name="android:dropDownSelector">@drawable/common_list_selector</item>
    </style>

    <style name="AppListPopupWindowStyle" parent="@style/Widget.AppCompat.ListPopupWindow">
        <item name="android:dropDownSelector">@drawable/common_list_selector</item>
    </style>

    <style name="AppDropDownListViewStyle" parent="@style/Widget.AppCompat.ListView.DropDown">
        <item name="android:listSelector">@drawable/common_list_selector</item>
    </style>

    <style name="textview_white_radius">
        <item name="android:paddingTop">3dp</item>
        <item name="android:paddingBottom">3dp</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:paddingRight">8dp</item>
        <item name="android:background">@drawable/common_white_radius_nor</item>
    </style>

    <style name="newcomic_view">
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@color/holo_gray_3</item>
    </style>

    <style name="common_text_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:text">暂无</item>
        <item name="android:textColor">@color/text_color_5</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="PlayerControlBarButton">
        <item name="android:background">@drawable/media_control_item_background</item>
        <item name="android:focusable">true</item>
        <item name="android:scaleType">centerInside</item>
        <item name="android:adjustViewBounds">true</item>
    </style>

    <style name="Widget.App.Seekbar.Pink" parent="@android:attr/progressBarStyleHorizontal">
        <item name="android:progressDrawable">@drawable/abcp_pink_scrubber_progress_horizontal_holo_light</item>
        <item name="android:thumb">@drawable/bili_player_seekbar_thumb</item>
        <item name="android:thumbOffset">1dp</item>
    </style>

    <style name="CommonUnderline">
        <item name="android:background">@color/underline_color</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
    </style>

    <style name="PlayerControlBarButtonWithText" parent="@style/PlayerControlBarButton">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:paddingTop">6dp</item>
        <item name="android:drawablePadding">4dp</item>
    </style>

    <style name="loading_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:indeterminateDrawable">@anim/loading</item>
        <item name="android:maxHeight">80dp</item>
        <item name="android:maxWidth">80dp</item>
        <item name="android:minHeight">80dp</item>
        <item name="android:minWidth">80dp</item>
    </style>

   
</resources>